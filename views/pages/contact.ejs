<% if(message){ %>
<div class="alert alert-success alert-dismissible" role="alert" id="alert-message">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <%= message %>
</div>
<script type="text/javascript">
  $('#alert-message').alert();
</script>
<% } %>
